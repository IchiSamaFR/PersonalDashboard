<UserControl x:Class="ModernDesign.View.Dashboard.Menu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ModernDesign.View.Dashboard"
             xmlns:dashboard="clr-namespace:ModernDesign.Model.Dashboard"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="150">
    <Grid Background="{DynamicResource bru_BackgroundDarker}">
        <ItemsControl ItemsSource="{Binding MenuButtons}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Background="Red">
                        <Button Style="{StaticResource MenuButton}"/>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Vertical"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
    </Grid>
</UserControl>
